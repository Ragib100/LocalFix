# Database Configuration
DB_USER=your_oracle_username
DB_PASSWORD=your_oracle_password
DB_CONNECT_STRING=localhost:1521/XE

# JWT Secret
JWT_SECRET=1234

# Server Configuration
PORT=5000
NODE_ENV=development
SERVER_URL=http://localhost:5000

# Frontend URL
CLIENT_URL=http://localhost:3000

# Supabase Configuration (Required for file storage)
# Get these from your Supabase project settings: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key

# Supabase Storage Buckets:
# - profiles: Profile pictures (5MB limit)
# - issue-images: Issue photos (10MB limit)  
# - proofs: Work completion proof photos (10MB limit)
# Make sure these buckets are created in your Supabase project with public access

# File Upload (legacy - now using Supabase)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

#mapbox
MAPBOX_TOKEN=your_mapbox_token

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_PORT=5001
